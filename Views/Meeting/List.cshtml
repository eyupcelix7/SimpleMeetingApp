@model List<UserInfo>
@{
	ViewBag.Title = "Toplantı Katılım Listesi";
}
<main>
	<h1 class="h4">Toplantıya Katılım Listesi</h1>
	<table class="table table-bordered">
		<thead>
			<tr>
				<td>Ad</td>
				<td>Email</td>
				<td>Katılım Durumu</td>
				<td>Detay</td>
			</tr>
		</thead>
		<tbody>
			@{int i = 0;}
			@foreach(UserInfo user in Model)
			{
				string trClass = user.KatilimDurumu ? "table-success" : "table-danger";
				string durum = user.KatilimDurumu ? "Evet" : "Hayır";
				if (user.KatilimDurumu){ i++; }
				<tr class="@trClass">
					<td>@user.Name</td>
					<td>@user.Email</td>
					<td>@durum</td>
					<td>
						<a class="btn btn-sm btn-primary" href="/Meeting/Details/@user.Id">Detay</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
	<div class="card text-center p-1">
		<span>Katılımcı Sayısı: @i</span>
	</div>
</main>